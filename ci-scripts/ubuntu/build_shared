set -evx

export DEBIAN_FRONTEND=noninteractive

cd build

tar xf *.tar.bz2
cd */.
./courier-debuild -us -uc

# Do not install courier-authlib modules

rm -f deb/*ldap*
rm -f deb/*mysql*
rm -f deb/*pgsql*
rm -f deb/*pipe*
rm -f deb/*sqlite*
rm -f deb/*userdb*

# Do not install courier-sox-server

rm -f deb/*courier-sox-server*

if test -f deb/libcourier-auth-config*.deb
then
  dpkg -i deb/libcourier-auth-config*.deb
  mv deb/libcourier-auth-config*.deb ../../packages
fi

dpkg -i deb/*.deb
mv deb/*.deb ../../packages
